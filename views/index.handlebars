<div class="container">
	<div class="row">
		<div class="jumbotron">
			
			<img src="assets/img/burger.png" height=200 width=200 alt="Eat Da Burger" id="eatdaburger">
			<h2>Eat Da Burger</h2>
			<p>MAKE IT! THEN DEVOUR IT!</p>
		</div>
	</div>

	<div class="row">

		<div class="col-lg-3">
			{{!-- empty div --}}
		</div>

		<div class="col-lg-3">
			{{!-- not devoured burgers --}}
			<div class="notDevoured">
				<ul>
				  {{#each burgers}}
				    {{#unless this.devoured}}
				      <li>
				        {{this.burger_name}}

				        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
				          <input type="hidden" name="devoured" value="true">
				          <button type="submit">Devour</button>
				        </form>
				        
				      </li>
				    {{/unless}}
				  {{/each}}
				</ul>
			</div>

		</div>
		<div class="col-lg-3">
			{{!-- devoured burgers --}}

			<div class="devoured">
				<ul>
				  {{#each burgers}}
				    {{#if this.devoured}}
				      <li>
				        {{this.burger_name}}

			

				      </li>
				    {{/if}}
				  {{/each}}
				</ul>
			</div>

		</div>

		<div class="col-lg-3">
			{{!-- empty div --}}
		</div>

	</div>

	<div class="row">
		<div class="col-lg-4">
			{{!-- empty div --}}
		</div>
		<div class="col-lg-4">
			<div class="burgerInput">
				<h3>Add A Burger</h3>
				<form class="create-update-form" action="burgers/create" method="POST">

				  <div class="form-group">
				    <label for="burger">Burger Name:</label>
				    <br>
				    <input type="text" class="form-control" id="userBurger" name="name">
				  </div>

				  <button class="btn btn-primary" type="submit">Add Burger</button>
				</form>
			</div>
		</div>
		<div class="col-lg-4">
			{{!-- empty div --}}
		</div>
	</div>
</div>